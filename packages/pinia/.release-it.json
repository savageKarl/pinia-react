{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "assets": ["package.json", "CHANGELOG.md"],
    "push": false,
    "skipCI": false
  },
  "npm": {
    "publish": true,
    "tag": "${env.NPM_TAG}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {}
}
