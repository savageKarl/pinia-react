{
  "name": "@pinia-react/root",
  "packageManager": "pnpm@10.14.0",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "pnpm --filter pinia-react build",
    "playground-react": "pnpm --filter playground-react dev",
    "playground-nextjs": "pnpm --filter playground-nextjs dev",
    "test": "vitest run",
    "test-dts": "pnpm --filter pinia-react test-dts",
    "check": "pnpm exec biome check",
    "format": "pnpm exec biome check --write",
    "docs-dev": "pnpm --filter docs dev",
    "docs-build": "pnpm --filter docs build",
    "docs-preview": "pnpm --filter docs preview"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,mjs,cjs}": "biome check --write",
    "*.{json,graphql,grit}": "biome format --write",
    "*.{css,scss}": "biome format --write",
    "*.html": "biome format --write"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.4",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
